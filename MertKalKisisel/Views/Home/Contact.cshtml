@model MertKalKisisel.Models.iletisim
@{
    @* IEnumerable<MertKalKisisel.Models.iletisim> zor = ViewData["Form"] as IEnumerable<MertKalKisisel.Models.iletisim>; *@
}
<link href="~/css/MertKalStyleee.css" rel="stylesheet" />
<link href="~/css/media.css" rel="stylesheet" />
<style>
    body {
        background-image: url(https://images.unsplash.com/photo-1484950763426-56b5bf172dbb?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80);
        background-repeat: no-repeat;
        background-size: cover;
        height: 100%;
        line-height: 1.0;
        -webkit-box-sizing: border-box;
        box-sizing: border-box;
    }

    label {
        font-size: 15px;
    }
</style>
<body>
    <div class="container" style="margin-top:8%">
        <h3 style="text-align:center; font-size:50px; margin-top:5%; margin-left:10%;color:white"> <strong> Birlikte Çalışmak </strong> İsterseniz Benimle Hemen İletişime Geçin</h3>
        <div class="row" style="margin-bottom:20%;">
            <div class=" col-md-6">
                <div class="col-12">
                    <div class="contact-wrap">
                        <h3 style=" font-size:25px; margin-top:5%;margin-left: 15%; margin-right: 15%"> Benimle <strong> İletişime </strong> Geç</h3>
                     
                    </div>
                </div>
            </div>
            <div class="col-md-4 py-4">
                <div style="margin-top:10%; margin-left:15%">
                    <h3 style="font-size:30px; margin-top:3%"> İletişim Bilgilerim</h3>
                    <p class="fas fa-home py-2" style="font-size:20px; margin-top:15%">&#160 Adresim</p>
                    <p style="font-size:20px; font-family:sans-serif; margin-left:5%">@ViewBag.adres</p>
                    <p class="fas fa-mobile py-2" style="font-size:20px; margin-top:10%">&#160 Telefon Numaram</p>
                    <p style="font-size:20px; font-family:sans-serif; margin-left:5%">@ViewBag.telno</p>
                    <p class="fas fa-envelope py-2" style="font-size:20px; margin-top:5%">&#160 Email Adresim</p>
                    <p href="#" style="font-size:20px; font-family:sans-serif; margin-left:5%">@ViewBag.email</p>
                </div>
            </div>
        </div>
    </div>
</body>