@using MertKalKisisel.Models
@model List<HAKKIMDA>
@{
    @* BURAYI DUZENLEMEYI UNUTMA MERT 12.10.2020*@
}
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>
<link href="~/css/MertKalStyleee.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Gloria+Hallelujah&display=swap" rel="stylesheet">
<link href="~/css/media.css" rel="stylesheet" />
<style>
    body {
        background-image: url(https://images.unsplash.com/photo-1484950763426-56b5bf172dbb?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80);
        background-repeat: no-repeat;
        background-size: cover;
        height: 100%;
        line-height: 1.0;
        -webkit-box-sizing: border-box;
        box-sizing: border-box;
    }
</style>

    <div class="container" style="margin-top:25vh">
        <div class="row mb-5">
            <div class="col-lg-6 pr-lg-5 mb-5 mb-lg-0">
                @foreach (var item in Model)
                {
                    <img src="@item.foto" alt="Image placeholder" class="img-fluid" style="border-radius:10%;">
                }
            </div>
            <div class="col-lg-6 pl-lg-5">
                <h2 style="margin-right:25%"><strong> HAKKIMDA</strong></h2>
                @foreach (var item in Model)
                {
                    <div class="container" style="font-size:30px">
                    <p class="lead">@item.baslik</p>
                    <p class="mb-5">@item.aciklama</p>
                    </div>
                    <a href="@Url.Action("Contact","Home")" class="btn btn-primary px-4 py-2 btn-sm smoothscroll" style="font-size:15px;"> <b>Benimle İletişime Geç</b> </a>
                    <a href="@item.cv" class="btn btn-secondary px-4 py-2 btn-sm" style="font-size:15px;"><b>CV Görüntüle/İndir</b></a>
                }
            </div>
        </div>
    </div>
   
<br />
