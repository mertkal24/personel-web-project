@model MertKalKisisel.Models.guzel
@{
    ViewBag.Title = "Yetenek";
    Layout = "~/Areas/admin/Views/Shared/_adminLayout.cshtml";
}

<h2>Yetenek</h2>


<div class="content-wrapper">
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Yetenekler</h3>

                    </div>                   
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Yetenek Adı</th>
                                    <th>Güncelle</th>
                                    <th>Sil</th>
                                </tr>
                            </thead>
                            <tbody id="kayitlar">
                                @foreach (var item in Model.Yetenek)
                                {
                                    <tr class="@item.YetenekID">
                                        <td id="a-@item.YetenekID">@item.YetenekID</td>
                                        <td id="b-@item.YetenekID">@item.YetenekAdi</td>
                                        <td><button id="@item.YetenekID" class="btn btn-success Guncelle">Güncelle</button></td>
                                        <td><button id="@item.YetenekID" class="btn btn-danger sll">Sil</button></td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a id="yeni" class="btn btn-primary">YENİ YETENEK EKLE</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>
<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script src="~/Content/admin/plugins/jquery/jquery.min.js"></script>
<script src="~/js/yetenek.js"></script>
<script src="~/js/sweetalert2.min.js"></script>



