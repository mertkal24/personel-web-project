@using MertKalKisisel.Models
@model List<Adminler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_adminLayout.cshtml";
}


<div class="content-wrapper">
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Admin Yönetimi</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <button class=" btn btn-info" id="Yeni">Admin Ekle</button>
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Kullanıcı Adı</th>
                                    <th>Şifre</th>
                                    <th>Google</th>
                                    <th>Email</th>
                                    <th>Facebook</th>
                                    <th>İnstagram</th>
                                    <th>Twitter</th>
                                    <th>Güncelle</th>
                                    <th>Sil</th>
                                </tr>
                            </thead>

                            <tbody id="kayitlar">
                                @foreach (var item in Model)
                                {
                                    <tr id="kafa-@item.Id">
                                        <td>@item.Id</td>
                                        <td><div id="ad-@item.Id">@item.AdminKullaniciAdi</div></td>
                                        <td><div id="sifre-@item.Id">@item.Sifre</div></td>
                                        <td><div id="google-@item.Id">@item.googlehesap</div></td>
                                        <td><div id="email-@item.Id">@item.email</div></td>
                                        <td><div id="face-@item.Id">@item.Facebook</div></td>
                                        <td><div id="insta-@item.Id">@item.İnstagram</div></td>
                                        <td><div id="twit-@item.Id">@item.Twitter</div></td>
                                        <td><a class="btn btn-info Guncelle" id="@item.Id">Güncelle</a></td>
                                        <td><a class="btn btn-danger Sil" id="@item.Id">Sil</a></td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>

    </section>
</div>
<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script src="~/Content/admin/plugins/jquery/jquery.min.js"></script>
<script src="~/js/adminler.js"></script>
<script src="~/js/sweetalert2.min.js"></script>


