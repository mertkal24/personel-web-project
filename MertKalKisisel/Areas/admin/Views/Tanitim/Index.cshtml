@model MertKalKisisel.Models.guzel
@{
    ViewBag.Title = "TanitimBilgi";
    Layout = "~/Areas/admin/Views/Shared/_adminLayout.cshtml";
}
<style>
    #mk{display:none;}
</style>
<div class="content-wrapper">
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div id="icrk" class="card">
                    <div class="card-header">
                        <h3 class="card-title">Tanitim Bilgileri</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead><tr><th>Fotoğraf</th><th>Ad Soyad</th><th>Lise</th><th>Üniversite</th><th>Ünvan</th><th>Telefon Numarası</th><th>Email</th><th>Adres</th><th>Güncelle</th></tr></thead>
                            <tbody id="kayitlar">
                                @foreach(var item in Model.Tanitim)
                                {
                                    <tr id="k-@item.ID">
                                        <td><img style="width:100px;height:100px"id="f-@item.ID" src="@item.foto" /></td>
                                        <td><div id="ad-@item.ID">@item.AdSoyad</div></td>
                                        <td><div id="lise-@item.ID">@item.lise</div></td>
                                        <td><div id="uni-@item.ID">@item.uni</div></td>
                                        <td><div id="unvan-@item.ID">@item.unvan</div></td>
                                        <td><div id="tel-@item.ID">@item.telno</div></td>
                                        <td><div id="email-@item.ID">@item.email</div></td>
                                        <td><div id="adress-@item.ID">@item.adress</div></td>
                                        <td><button  style="width:150px"id="@item.ID" class="btn btn-success gncbtn">Güncelle</button><br />
                                           <button style="margin-top:7%;width:150px" id="@item.ID" class="btn btn-success ft">Foto Güncelle</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div id="mk">
                    <h1>Fotoğraf Güncelle</h1>
                    <div class="form-group col-md-4">
                        <input type="file" class="form-control" id="files" multiple />
                    </div>
                    <div class="form-group col-md-4">
                        <input type="button" id="btnUpload" class="btn btn-info snd" value="Upload Files" />
                        <input class="btn btn-danger" type="button" id="vazgec1" name="name" value="Vazgeç" />
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script src="~/js/tanitim.js"></script>
