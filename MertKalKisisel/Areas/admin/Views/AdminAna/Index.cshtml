@model MertKalKisisel.Models.guzel
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_adminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Gelen Mesajlar</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","AdminAna")">Home</a></li>
                        <li class="breadcrumb-item active">Gelen Mesajlar</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Mesajlar Listesi</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Ad</th>
                                    <th>Email</th>
                                    <th>Telelefon Numarası</th>
                                    <th>Mesaj</th>
                                    <th>Mail At</th>
                                </tr>
                            </thead>
                           
                            <tbody>
                                @foreach (var item in Model.iletisim)
                                {
                                    <tr id="kafa-@item.Id">
                                        <td><div id="ad-@item.Id">@item.Ad</div></td>
                                        <td><div id="email-@item.Id">@item.email</div></td>
                                        <td><div id="telno-@item.Id">@item.telno</div></td>
                                        <td><div id="mesaj-@item.Id">@item.telno</div></td>
                                        <td><button class="btn btn-success Mail" id="@item.Id">Mail At</button></td>
                                    </tr>
                                }
                                </tbody>
                           


                        </table>
                    </div>

                </div>

            </div>

        </div>

    </section>

</div>

<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script src="~/js/adminana.js"></script>
<script src="~/js/sweetalert2.min.js"></script>
<script src="~/Content/admin/plugins/jquery/jquery.min.js"></script>


